generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @db.Uuid
  name          String?
  email         String    @unique
  role          UserRole  @default(GUEST)
  points        Int       @default(0)
  cart          Cart?
  orders        Order[]
  addresses     Address[]
  testimonies   Testimony[]
  userVouchers  UserVoucher[]
}

enum UserRole {
  GUEST
  MEMBER
  ADMIN
}

model Address {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId        String   @db.Uuid
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label         String
  isDefault     Boolean  @default(false)
  provinceId    String
  province      String
  cityId        String
  city          String
  district      String?
  postalCode    String
  fullAddress   String   @db.Text
  latitude      Float?
  longitude     Float?
  noteToDriver  String?
  orders        Order[]
}

model Product {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String
  price       Decimal  @db.Decimal(12, 2)
  onSale      Boolean  @default(false)
  promoPrice  Decimal? @db.Decimal(12, 2)
  stock       Int      @default(0)
  weight      Int      @default(0) 
  brandId     String   @db.Uuid
  brand       Brand    @relation(fields: [brandId], references: [id])
  categoryId  String   @db.Uuid
  category    Category @relation(fields: [categoryId], references: [id])
  vendors     Vendor[]
  cartItems   CartItem[]
  orderItems  OrderItem[]
  testimonies Testimony[]
}

model Category {
  id        String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  parentId  String?    @db.Uuid
  parent    Category?  @relation("SubCategories", fields: [parentId], references: [id])
  children  Category[] @relation("SubCategories")
  products  Product[]
}

model Brand {
  id       String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name     String
  products Product[]
}

model Vendor {
  id       String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name     String
  products Product[]
}

model Cart {
  id        String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String     @unique @db.Uuid
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  cartId    String  @db.Uuid
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String  @db.Uuid
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int     @default(1)
}

model Order {
  id             String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId         String      @db.Uuid
  user           User        @relation(fields: [userId], references: [id])
  addressId      String      @db.Uuid
  address        Address     @relation(fields: [addressId], references: [id])
  recipientName  String
  recipientPhone String
  shippingCost   Decimal     @db.Decimal(12, 2)
  courier        String
  service        String
  waybill        String?
  totalAmount    Decimal     @db.Decimal(12, 2)
  transactionId  String?     @unique
  paymentStatus  String      @default("PENDING")
  items          OrderItem[]
  createdAt      DateTime    @default(now())
}

model OrderItem {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orderId   String  @db.Uuid
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String  @db.Uuid
  product   Product @relation(fields: [productId], references: [id])
  price     Decimal @db.Decimal(12, 2)
  quantity  Int
}

model Testimony {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  rating      Int
  description String
  userId      String   @db.Uuid
  user        User     @relation(fields: [userId], references: [id])
  productId   String   @db.Uuid
  product     Product  @relation(fields: [productId], references: [id])
  media       Media[]
  createdAt   DateTime @default(now())
}

model Media {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  url         String
  type        MediaType
  testimonyId String    @db.Uuid
  testimony   Testimony @relation(fields: [testimonyId], references: [id], onDelete: Cascade)
}

enum MediaType {
  IMAGE
  VIDEO
}

model Voucher {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  code         String   @unique
  pointsNeeded Int
  discount     Decimal
  isBroadcast  Boolean  @default(false)
  userVouchers UserVoucher[]
}

model UserVoucher {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id])
  voucherId String   @db.Uuid
  voucher   Voucher  @relation(fields: [voucherId], references: [id])
  isUsed    Boolean  @default(false)
}

model Event {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  content     String
  imageUrl    String?
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean  @default(true)
}